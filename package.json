{
  "name": "just-utils",
  "version": "1.0.0",
  "description": "Some commonly used utils in daily business code development",
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf ./dist",
    "test": "npm run lint && cross-env NODE_ENV=test nyc mocha --recursive",
    "release": "npm test && npm run build && git commit -am 0.4.1 && git tag 0.4.1 && git push && git push --tags",
    "lint": "eslint -c .eslintrc.js \"src/**/*.js\"",
    "lint:fix": "eslint --fix -c .eslintrc.js 'src/**/*.js' --fix",
    "build:self": "rollup -c config/rollup.config.js",
    "build:esm": "rollup -c config/rollup.config.esm.js",
    "build:aio": "rollup -c config/rollup.config.aio.js",
    "build:aio.min": "cross-env NODE_ENV=production npm run build:aio",
    "build": "lerna run build --parallel",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "bootstrap": "lerna bootstrap"
  },
  "author": "Bernie Wang <bernie.wangbj@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/sixwinds/just-utils.git"
  },
  "bugs": {
    "url": "https://github.com/sixwinds/just-utils/issues"
  },
  "engines": {
    "node": ">= 0.12.0"
  },
  "devDependencies": {
    "@babel/cli": "7.1.5",
    "@babel/core": "^7.1.2",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "7.0.0",
    "@js-lib/cli": "^1.5.1",
    "babel-plugin-istanbul": "5.1.0",
    "coveralls": "3.0.2",
    "cross-env": "5.2.0",
    "es5-shim": "4.5.10",
    "eslint": "^5.15.1",
    "expect.js": "0.3.1",
    "fetch-mock": "^8.0.0-alpha.14",
    "lerna": "^3.19.0",
    "mocha": "^6.2.2",
    "node-fetch": "^2.6.0",
    "nyc": "13.1.0",
    "rimraf": "2.6.2",
    "rollup": "^1.26.3",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-uglify": "^6.0.3",
    "source-map-support": "^0.5.16",
    "whatwg-fetch": "^3.0.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.1.2"
  }
}
